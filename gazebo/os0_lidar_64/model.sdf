        </ray>
        <plugin name="gazebo_ros_laser_controller" filename="libgazebo_ros_ouster_gpu_laser.so">
          <topicName>/os_cloud_node/points</topicName>
          <frameName>os_lidar</frameName>
          <min_range>0.7</min_range>
